<?xml version="1.0" encoding="UTF-8"?>
<Guide>

	<GuideOptions>
	
		<Node>
			<Name>main_prompt</Name>
			<Title>What would you like to do?</Title>
			<Option>'r': read sensors</Option>
			<Option>'R': stream sensor readings for 10 seconds</Option>
			<Option>'s': set an output</Option>
			<Option>'p': set a proportional relationship</Option>
			<Option>'x': remove a relationship</Option>
			<Option>'X': remove relationships for all outputs</Option>
		</Node>
		
		<Node>
			<Name>read_sensors</Name>
			<Title>Let's read the sensors</Title>
		</Node>
		
		<Node>
			<Name>stream_sensors</Name>
			<Title>Streaming sensors for 10 seconds</Title>
		</Node>
		
		<Node>
			<Name>output_prompt</Name>
			<Title>What type of output?</Title>
			<Option>'s': servo</Option>
			<Option>'r': red LED</Option>
			<Option>'g': green LED</Option>
			<Option>'b': blue LED</Option>
			<Option>'v': volume of the buzzer</Option>
			<Option>'f': frequency of the buzzer</Option>
		</Node>

		<!--TODO figure out how to link to nodes multiple times
		 	maybe add a 3rd element called 'Link'-->

		<!-- TODO - add a type element to denote text vs. number -->
		
		<Node>
			<Name>set_proportion</Name>
			<Title>Lets set a proportional relationship!</Title>
		</Node>
		
		<Node>
			<Name>remove_relationship</Name>
			<Title>Lets remove a relationship!</Title>
		</Node>
		
		<Node>
			<Name>remove_all_relationships</Name>
			<Title>Lets remove all the relationship!</Title>
		</Node>

		<!-- separation -->
		
		<Node>
			<Name>output_a_v</Name>
			<Title>What would you like to set the volume to?</Title>
			<Option>0-100</Option>
		</Node>
		
		<Node>
			<Name>output_a_f</Name>
			<Title>What would you like to set the frequency to?</Title>
			<Option>0-20000</Option>
		</Node>
		
		<Node>
			<Name>output_b</Name>
			<Title>Which one?</Title>
			<Option>1</Option>
			<Option>2</Option>
			<Option>3</Option>
		</Node>
		
		<Node>
			<Name>output_b_s</Name>
			<Title>What would you like to set the servo to?</Title>
			<Option>0-180</Option>
		</Node>
		
		<Node>
			<Name>output_b_led</Name>
			<Title>What would you like to the LED to?</Title>
			<Option>0-100</Option>
		</Node>
		
	</GuideOptions>
	
	<Linking>
	
		<Node>
			<Parent>main_prompt</Parent>
			<Child>read_sensors</Child>
			<Child>stream_sensors</Child>
			<Child>output_prompt</Child>
			<Child>set_proportion</Child>
			<Child>remove_relationship</Child>
			<Child>remove_all_relationships</Child>
		</Node>
	
		<Node>
			<Parent>output_prompt</Parent>
			<Child>output_a_v</Child>
			<Child>output_a_f</Child>
			<Child>output_b</Child>
		</Node>
		
		<Node>
			<Parent>output_b</Parent>
			<Child>output_b_s</Child>
			<Child>output_b_led</Child>
		</Node>
		
	</Linking>
	
</Guide>