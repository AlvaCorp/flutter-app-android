<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.cmucreatelab.flutter_android.activities.RobotActivity">

    <include
        android:id="@+id/include_toolbar_robot"
        layout="@layout/main_toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/include_toolbar_robot"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/image_flutter_illustration"
            android:layout_width="550dp"
            android:layout_height="235dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/flutter_illustration_robot_page"/>

        <RelativeLayout
            android:id="@+id/linear_servos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/image_flutter_illustration"
            android:layout_alignTop="@+id/image_flutter_illustration"
            android:padding="5dp">

            <RelativeLayout
                android:id="@+id/relative_servo_3"
                android:layout_width="150dp"
                android:layout_height="75dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true">

                <ImageView
                    android:id="@+id/image_servo_3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="2dp"
                    android:src="@drawable/question_icon"
                    android:layout_alignParentEnd="true"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_alignParentStart="true"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="75dp"
                        android:layout_height="37dp"
                        android:padding="2dp"
                        android:src="@drawable/ic_launcher"/>

                    <ImageView
                        android:layout_width="75dp"
                        android:layout_height="38dp"
                        android:padding="2dp"
                        android:src="@drawable/sensor_light_grey_s_m_20"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:padding="2dp"
                    android:src="@drawable/link_servo_b_g_sm"
                    android:layout_alignParentEnd="true"
                    android:visibility="gone"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative_servo_2"
                android:layout_width="150dp"
                android:layout_height="75dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/relative_servo_3">

                <ImageView
                    android:id="@+id/image_servo_2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="2dp"
                    android:src="@drawable/question_icon"
                    android:layout_alignParentEnd="true"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_alignParentStart="true"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="75dp"
                        android:layout_height="37dp"
                        android:padding="2dp"
                        android:src="@drawable/ic_launcher"/>

                    <ImageView
                        android:layout_width="75dp"
                        android:layout_height="38dp"
                        android:padding="2dp"
                        android:src="@drawable/sensor_light_grey_s_m_20"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:padding="2dp"
                    android:src="@drawable/link_servo_b_g_sm"
                    android:layout_alignParentEnd="true"
                    android:visibility="gone"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative_servo_1"
                android:layout_width="150dp"
                android:layout_height="75dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/relative_servo_2">

                <ImageView
                    android:id="@+id/image_servo_1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="2dp"
                    android:src="@drawable/question_icon"
                    android:layout_alignParentEnd="true"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_alignParentStart="true"
                    android:visibility="gone">

                    <ImageView
                    android:layout_width="75dp"
                    android:layout_height="37dp"
                    android:padding="2dp"
                    android:src="@drawable/ic_launcher"/>

                    <ImageView
                        android:layout_width="75dp"
                        android:layout_height="38dp"
                        android:padding="2dp"
                        android:src="@drawable/sensor_light_grey_s_m_20"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:padding="2dp"
                    android:src="@drawable/link_servo_b_g_sm"
                    android:layout_alignParentEnd="true"
                    android:visibility="gone"/>

            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linear_leds"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_above="@+id/image_flutter_illustration"
            android:layout_toEndOf="@id/linear_servos"
            android:layout_marginTop="30dp"
            android:padding="5dp">

            <ImageView
                android:id="@+id/image_led_1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:padding="2dp"
                android:src="@drawable/question_icon"/>

            <ImageView
                android:id="@+id/image_led_2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:padding="2dp"
                android:src="@drawable/question_icon"/>

            <ImageView
                android:id="@+id/image_led_3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:padding="2dp"
                android:src="@drawable/question_icon"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/image_speaker"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toEndOf="@id/linear_leds"
            android:layout_alignBottom="@+id/linear_leds"
            android:padding="2dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/question_icon" />

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="49dp"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true">


            <Button
                android:id="@+id/button_sensor_data"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/round_green_button_left"
                android:text="@string/sensor_data"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/button_simulate_data"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/round_green_white_right"
                android:text="@string/simulate_data" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
