<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bg">

    <include
        layout="@layout/toolbar_outputs"
        android:id="@+id/include_toolbar_dialog" />

    <TextView
        android:id="@+id/text_set_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:textColor="#39393a"
        android:textSize="20sp"
        android:textStyle="normal" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_red"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:padding="15dp"
            android:src="@drawable/swatch_red" />

        <ImageView
            android:id="@+id/imageView_orange"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:padding="15dp"
            android:src="@drawable/swatch_orange" />

        <ImageView
            android:id="@+id/imageView_yellow"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:padding="15dp"
            android:src="@drawable/swatch_yellow" />

        <ImageView
            android:id="@+id/imageView_rose"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:padding="15dp"
            android:src="@drawable/swatch_rose" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_green"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:padding="15dp"
            android:src="@drawable/swatch_green" />

        <ImageView
            android:id="@+id/imageView_spring_green"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:padding="15dp"
            android:src="@drawable/swatch_spring_green" />

        <ImageView
            android:id="@+id/imageView_cyan"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:padding="15dp"
            android:src="@drawable/swatch_cyan" />

        <ImageView
            android:id="@+id/imageView_blue"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:padding="15dp"
            android:src="@drawable/swatch_blue" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_violet"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:padding="15dp"
            android:src="@drawable/swatch_violet" />

        <ImageView
            android:id="@+id/imageView_magenta"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:padding="15dp"
            android:src="@drawable/swatch_magenta" />

        <ImageView
            android:id="@+id/imageView_white"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:padding="15dp"
            android:src="@drawable/swatch_white" />

        <ImageView
            android:id="@+id/imageView_black"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:padding="15dp"
            android:src="@drawable/swatch_black" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="8dp" />

    <include
        layout="@layout/link_buttons_for_wizard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>