<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:text="@string/not_connected_title"
        android:padding="10dp"/>

    <TextView
        android:text="@string/not_connected_message"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:padding="10dp"/>

    <Button
        android:id="@+id/button_connect_flutter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/not_connected_button"
        android:textColor="@color/white"
        android:background="@drawable/round_green_button_bottom"/>

</LinearLayout>