<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="sans-serif"
            android:text="@string/control_outputs"
            android:textColor="#4a4a4a"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/button_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/close" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_current_servo_pos_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textColor="#313132"
                android:textSize="21sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/image_servo_1"
                android:layout_width="49dp"
                android:layout_height="28dp"
                android:src="@drawable/servo_icon" />

            <TextView
                android:id="@+id/text_servo_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_servo_1"
                android:layout_marginTop="2dp"
                android:fontFamily="sans-serif"
                android:text="@string/servo_1"
                android:textColor="#313132"
                android:textSize="14sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/text_current_servo_pos_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:fontFamily="sans-serif"
                android:textColor="#313132"
                android:textSize="21sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/image_servo_2"
                android:layout_width="49dp"
                android:layout_height="28dp"
                android:src="@drawable/servo_icon" />

            <TextView
                android:id="@+id/text_servo_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="sans-serif"
                android:text="@string/servo_2"
                android:textColor="#313132"
                android:textSize="14sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/text_current_servo_pos_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:fontFamily="sans-serif"
                android:textColor="#313132"
                android:textSize="21sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/image_servo_3"
                android:layout_width="49dp"
                android:layout_height="28dp"
                android:layout_below="@id/text_current_servo_pos_3"
                android:src="@drawable/servo_icon" />

            <TextView
                android:id="@+id/text_servo_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_servo_3"
                android:layout_marginTop="2dp"
                android:fontFamily="sans-serif"
                android:text="@string/servo_3"
                android:textColor="#313132"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <SeekBar
                android:id="@+id/seek_servo_1"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="54dp"
                android:max="180" />

            <SeekBar
                android:id="@+id/seek_servo_2"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="71dp"
                android:max="180" />

            <SeekBar
                android:id="@+id/seek_servo_3"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="71dp"

                android:max="180" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_led_1"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="23dp"
                android:src="@drawable/led" />

            <TextView
                android:id="@+id/text_led_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="sans-serif"
                android:text="@string/led_1"
                android:textColor="#313132"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/image_led_2"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="59dp"
                android:src="@drawable/led" />

            <TextView
                android:id="@+id/text_led_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_led_2"
                android:layout_marginTop="2dp"
                android:fontFamily="sans-serif"
                android:text="@string/led_2"
                android:textColor="#313132"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/image_led_3"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="59dp"
                android:src="@drawable/led" />

            <TextView
                android:id="@+id/text_led_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_led_3"
                android:layout_marginTop="2dp"
                android:fontFamily="sans-serif"
                android:text="@string/led_3"
                android:textColor="#313132"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="40dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_led_color_1"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:adjustViewBounds="true" />

            <ImageView
                android:id="@+id/image_led_color_2"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="38dp"
                android:adjustViewBounds="true" />

            <ImageView
                android:id="@+id/image_led_color_3"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="38dp"
                android:adjustViewBounds="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="15dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_speaker"
                android:layout_width="34dp"
                android:layout_height="26dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:src="@drawable/speaker" />

            <TextView
                android:id="@+id/text_speaker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="@string/lowercase_speaker"
                android:textColor="#313132"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_volume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/volume"
                android:textColor="#47474a"
                android:textSize="16sp"
                android:textStyle="normal" />

            <SeekBar
                android:id="@+id/seek_volume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="25dp"
                android:max="100" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="@string/pitch"
                android:textColor="#47474a"
                android:textSize="16sp"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/image_sheet_music"
                android:layout_width="238dp"
                android:layout_height="89dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/link_pitch_staff" />


            <TextView
                android:id="@+id/text_current_note_pitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:fontFamily="sans-serif"
                android:gravity="center_horizontal"
                android:textColor="#4a4a4a"
                android:textSize="20sp"
                android:textStyle="bold" />

            <SeekBar
                android:id="@+id/seek_pitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:max="14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:text="@string/minimum_pitch" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="@string/maximum_pitch" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/button_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/round_green_button_bottom"
        android:text="@string/done"
        android:textColor="@color/white" />

</LinearLayout>