<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_record_title"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="24sp"
        android:text="@string/record_data_set"/>

    <EditText
        android:id="@+id/edit_data_set_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/data_set_name"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/for_how_long"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <FrameLayout
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:background="@drawable/spinner_dropdown_bg">

            <EditText
                android:id="@+id/edit_number_of_intervals"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="number"
                android:hint="@string/zero"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="2dp"/>

        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@string/times_per"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:padding="2dp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/spinner_dropdown_bg">

            <Spinner
                android:id="@+id/spinner_dropdown_interval"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:spinnerMode="dropdown"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="2dp"/>

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@string/for_word"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:padding="2dp"/>

        <FrameLayout
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:background="@drawable/spinner_dropdown_bg"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp">

            <EditText
                android:id="@+id/edit_time_period"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="number"
                android:hint="@string/zero"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="2dp"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/spinner_dropdown_bg"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp">

            <Spinner
                android:id="@+id/spinner_dropdown_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:spinnerMode="dropdown"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="2dp" />

        </FrameLayout>

    </LinearLayout>

</LinearLayout>