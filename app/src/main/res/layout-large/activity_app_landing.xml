<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".activities.AppLandingActivity"
    tools:openDrawer="start">

<!--    <include
        android:id="@+id/include_base_activity_app_landing"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/base_activity_app_landing" />-->

    <RelativeLayout
        android:id="@+id/landing_page_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/include_toolbar_scan"
            layout="@layout/main_toolbar" />

        <TextView
            android:id="@+id/text_app_landing_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="@string/connect_flutter"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_connect_s1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/image_flutter"
            android:layout_alignTop="@+id/image_flutter"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="130dp"
            android:layout_marginTop="-16dp"
            android:text="@string/connect_step_one"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_connect_s2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/button_scan"
            android:layout_alignTop="@+id/button_scan"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="90dp"
            android:layout_marginTop="-40dp"
            android:text="@string/connect_step_two"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/image_flutter"
            android:layout_width="340dp"
            android:layout_height="197dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/fluttersearchgraphic" />

        <Button
            android:id="@+id/button_scan"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/round_green_button"
            android:text="@string/scan"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/text_connect_s3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="90dp"
            android:layout_marginTop="70dp"
            android:text="@string/connect_step_three"
            android:textSize="20sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/text_connect_s3_explanation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/text_connect_s3"
            android:layout_alignTop="@+id/text_connect_s3"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="-170dp"
            android:layout_marginTop="25dp"
            android:width="430dp"
            android:lines="2"
            android:text="@string/connect_step_three_prompt"
            android:textSize="20sp"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/image_flutter_name_tag"
            android:layout_width="340dp"
            android:layout_height="197dp"
            android:layout_alignStart="@+id/text_connect_s3_explanation"
            android:layout_alignTop="@+id/text_connect_s3_explanation"
            android:layout_marginStart="50dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/flutter_name_tag"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/text_flutter_tag_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/image_flutter_name_tag"
            android:layout_alignTop="@+id/image_flutter_name_tag"
            android:layout_marginStart="80dp"
            android:layout_marginTop="79dp"
            android:width="140dp"
            android:gravity="center"
            android:lines="2"
            android:text="@string/flutter_tag_text"
            android:textSize="16sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/text_connect_s4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image_flutter_name_tag"
            android:layout_alignStart="@+id/text_connect_s3"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-15dp"
            android:text="@string/connect_step_four"
            android:textSize="20sp"
            android:visibility="invisible" />


        <TextView
            android:id="@+id/text_connect_s4_explanation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/text_connect_s4"
            android:layout_alignTop="@+id/text_connect_s4"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="-150dp"
            android:layout_marginTop="25dp"
            android:width="380dp"
            android:lines="2"
            android:text="@string/connect_step_four_prompt"
            android:textSize="20sp"
            android:visibility="invisible" />


        <ImageView
            android:id="@+id/image_content_scan_scroll_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/frame_second_scan"
            android:layout_alignStart="@+id/frame_second_scan"
            android:layout_marginBottom="28dp"
            android:layout_marginStart="-59dp"
            android:minHeight="48dp"
            android:minWidth="48dp"
            android:paddingEnd="12dp"
            android:scaleType="fitEnd"
            android:src="@drawable/grey_left"
            android:visibility="invisible" />

        <LinearLayout
            android:id="@+id/frame_second_scan"
            android:layout_width="600dp"
            android:layout_height="105dp"
            android:layout_above="@id/button_scan"
            android:layout_marginBottom="-4dp"
            android:layout_marginStart="240dp"
            android:clickable="true"
            android:visibility="invisible">

            <include layout="@layout/content_scan" />

        </LinearLayout>

        <ImageView
            android:id="@+id/image_content_scan_scroll_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/frame_second_scan"
            android:layout_marginBottom="28dp"
            android:layout_marginStart="11dp"
            android:layout_toEndOf="@+id/frame_second_scan"
            android:minHeight="48dp"
            android:minWidth="48dp"
            android:paddingStart="12dp"
            android:scaleType="fitStart"
            android:src="@drawable/grey_right"
            android:visibility="invisible" />


        <RelativeLayout
            android:id="@+id/layout_timed_prompt"
            android:layout_width="260dp"
            android:layout_height="150dp"
            android:layout_alignBottom="@+id/image_flutter_name_tag"
            android:layout_alignEnd="@+id/image_flutter_name_tag"
            android:layout_marginBottom="-40dp"
            android:layout_marginEnd="-312dp"
            android:background="@drawable/fill_2"
            android:visibility="invisible">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/image_timed_prompt"
                android:layout_marginStart="42dp"
                android:layout_marginTop="-15dp"
                android:text="@string/scan_timeout_prompt"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/image_timed_prompt"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="37dp"
                android:src="@drawable/fluttersearchgraphic" />

        </RelativeLayout>

        <include
            android:id="@+id/include_flutter_status_button"
            layout="@layout/flutter_status_button" />

    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true">

        <include
            android:id="@+id/include_side_nav_menu"
            layout="@layout/side_nav_menu" />
    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>