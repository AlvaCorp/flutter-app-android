<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#323744"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/button_close_drawer"
        android:layout_gravity="end"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/round_close_white_36" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="-30dp"
        android:src="@drawable/app_logo" />

    <Button
        android:id="@+id/nav_tutorials"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:text="@string/tutorials"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/nav_glossary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:text="@string/glossary"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:background="@android:color/transparent"
            android:clickable="false"
            android:text="@string/voice_prompts"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Switch
            android:id="@+id/switch_voice_prompts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp" />
    </RelativeLayout>
</LinearLayout>