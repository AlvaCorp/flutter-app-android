<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical">

    <include
        android:id="@+id/include_toolbar_dialog"
        layout="@layout/toolbar_outputs" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:text="Selected Color"
        android:textSize="16sp" />

    <FrameLayout
        android:id="@+id/frame_final_color"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:padding="2dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_red"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:padding="15dp"
            android:src="@drawable/swatch_red" />

        <ImageView
            android:id="@+id/imageView_orange"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:padding="15dp"
            android:src="@drawable/swatch_orange" />

        <ImageView
            android:id="@+id/imageView_yellow"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:padding="15dp"
            android:src="@drawable/swatch_yellow" />

        <ImageView
            android:id="@+id/imageView_rose"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:padding="15dp"
            android:src="@drawable/swatch_rose" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_green"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:padding="15dp"
            android:src="@drawable/swatch_green" />

        <ImageView
            android:id="@+id/imageView_spring_green"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:padding="15dp"
            android:src="@drawable/swatch_spring_green" />

        <ImageView
            android:id="@+id/imageView_cyan"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:padding="15dp"
            android:src="@drawable/swatch_cyan" />

        <ImageView
            android:id="@+id/imageView_blue"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:padding="15dp"
            android:src="@drawable/swatch_blue" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_violet"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:padding="15dp"
            android:src="@drawable/swatch_violet" />

        <ImageView
            android:id="@+id/imageView_magenta"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:padding="15dp"
            android:src="@drawable/swatch_magenta" />

        <ImageView
            android:id="@+id/imageView_white"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:padding="15dp"
            android:src="@drawable/swatch_white" />

        <ImageView
            android:id="@+id/imageView_black"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:padding="15dp"
            android:src="@drawable/swatch_black" />

    </LinearLayout>

    <Button
        android:id="@+id/button_set_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_green_button_bottom"
        android:text="@string/set_color"
        android:textColor="@color/white" />

    <include
        android:id="@+id/link_buttons_wizard"
        layout="@layout/link_buttons_for_wizard_part_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>