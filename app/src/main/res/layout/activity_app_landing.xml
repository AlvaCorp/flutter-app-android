<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AppLandingActivity">

    <include
        android:id="@+id/include_toolbar_scan"
        layout="@layout/main_toolbar" />


    <TextView
        android:id="@+id/text_app_landing_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="@string/connect_flutter"/>

    <FrameLayout
        android:id="@+id/frame_second_scan"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/text_app_landing_title"
        android:visibility="gone">

        <include layout="@layout/content_scan"/>

    </FrameLayout>

    <ImageView
        android:id="@+id/image_flutter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_launcher"/>
    
    <ImageView
        android:id="@+id/image_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_launcher"/>

    <ImageView
        android:id="@+id/image_timed_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/image_scan"
        android:layout_alignParentBottom="true"
        android:visibility="invisible"
        android:src="@mipmap/ic_launcher"/>

</RelativeLayout>