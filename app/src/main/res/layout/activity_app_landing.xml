<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AppLandingActivity">

    <include
        android:id="@+id/include_toolbar_scan"
        layout="@layout/main_toolbar" />


    <TextView
        android:id="@+id/text_app_landing_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/connect_flutter"
        android:textSize="24sp"
        android:textStyle="bold" />

    <FrameLayout
        android:id="@+id/frame_second_scan"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/text_app_landing_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:visibility="gone">

        <include layout="@layout/content_scan" />

    </FrameLayout>

    <TextView
        android:id="@+id/text_connect_s1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/image_flutter"
        android:layout_alignTop="@+id/image_flutter"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="-40dp"
        android:text="@string/connect_step_one"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/text_connect_s2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button_scan"
        android:layout_alignTop="@+id/button_scan"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="-40dp"
        android:text="@string/connect_step_two"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/image_flutter"
        android:layout_width="250dp"
        android:layout_height="107dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/fluttersearchgraphic" />

    <Button
        android:id="@+id/button_scan"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/round_green_button"
        android:text="@string/scan"
        android:textColor="@color/white" />

    <RelativeLayout
        android:id="@+id/layout_timed_prompt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="68dp"
            android:paddingBottom="110dp"
            android:text="@string/scan_timeout_prompt"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/image_timed_prompt"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/fluttersearchgraphic" />
    </RelativeLayout>

</RelativeLayout>