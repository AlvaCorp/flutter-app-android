<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="99dp"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorPrimary"
        android:theme="@style/AppTheme"
        app:popupTheme="@style/AppTheme">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="530">

            <FrameLayout
                android:id="@+id/linear_sensors_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="250">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sensors"
                    android:textColor="@color/white"
                    android:drawableStart="@drawable/menu_icon_sensor"
                    android:drawablePadding="6dp"
                    android:layout_gravity="bottom"
                    android:padding="6dp"/>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/linear_robot_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="56">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/robot"
                    android:textColor="@color/white"
                    android:drawableStart="@drawable/menu_icon_robot"
                    android:layout_gravity="center"
                    android:drawablePadding="6dp"
                    android:padding="6dp"/>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/linear_data_log_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="224">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/data_log"
                    android:textColor="@color/white"
                    android:drawableStart="@drawable/menu_icon_datalog"
                    android:drawablePadding="6dp"
                    android:layout_gravity="top"
                    android:padding="6dp"/>

            </FrameLayout>

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

</LinearLayout>